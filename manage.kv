WindowManager:
    MenuScreen:
    GraphScreen:

<MenuScreen>:
    name : "menu"
    BoxLayout:
        id : MainBox
        orientation: "vertical"
        spacing: 50


        MDToolbar:
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
            title: 'GRAPH PLOT APP'
            pos_hint: {'top': 1}


        MDRoundFlatButton
            text: "Get Data From File"
            size: 10, 50
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press: root.ReadData()

        GridLayout:
            cols:2

            Label:
                text: 'BAR GRAPH'
                color : '#000000'
            CheckBox:
                color: '#000000'
                group: 'GraphType'
                on_active: root.callback(self.active , "bar")

            Label:
                text: 'LINE GRAPH'
                color : '#000000'
            CheckBox:
                color: '#000000'
                group: 'GraphType'
                on_active: root.callback(self.active,'line')


        MDRoundFlatButton
            id : 'btn'
            text: "Show Graph"
            size: 10, 50
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press: root.PlotGraph()




        ScrollView:
            do_scroll_x : False
            do_scroll_y : True
            GridLayout:
                size: root.width, root.height
                cols:1
                size_hint_x:None
                size_hint_y:None
                height:self.minimum_height
                id: view

<GraphScreen>:
    name : "graph"
    ScrollView:
        do_scroll_x : True
        do_scroll_y : False
        GridLayout:
            id : GraphBox
            cols:1
            width: self.minimum_width




